{
  "manifest_version": 3,
  "name": "Receipt Splitter - Sam's Club",
  "version": "1.0.0",
  "description": "Scrape Sam's Club receipts/cart and export items to Google Sheets or CSV to split bills.",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": ["https://www.samsclub.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
